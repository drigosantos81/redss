<!-- Modal -->
<div class="modal-overlay">
  <div class="modal-dependente">
    <a class="close-modal-dependente">
      <i class="material-icons">close</i>
    </a>

    <form action="/cadastros/funcionarios/show-funcionario/{{dependente_func}}" method="post">
      {# FILHOS #}
      <div class="filhos">
        <div class="add-filho"> {# BOTÃO #}
          <div class="rotulo-dependente">Incluir Dependentes</div>
        </div>

        {# REPETIÇÂO FOR AQUI #}
        <!-- Divider -->
        <hr class="sidebar-divider my-0">
        <input type="hidden" name="funcionario_id" value="{{dependente_func}}">

        <div class="dados-filhos">
          <div> {# NOME #}
            <div class="rotulo">Nome: </div>
            <input class="nome" placeholder="Nome do filho(a)" type="text" name="nome">
          </div>

          <div> {# NASCIMENTO #}
            <div class="rotulo">Data de Nascimento</div>
            <input
              placeholder="DD/MM/AAAA"
              type="text"
              name="nascimento"
              onkeydown="Mask.apply(this, 'data')"
            >
          </div>

          <div> {# CPF #}
            <div class="rotulo">CPF</div>
            <input
              placeholder="000.000.000-00"
              type="text"
              name="cpf"
              onkeydown="Mask.apply(this, 'cpf')"
            >
          </div>
        </div>

        <div> {# BOTÃO ADD #}
          <p class="botoes-edita-registro">Adicionar</p>
        </div>
      </div>

      <button type="submit">Salvar</button>
    </form>

  </div>
</div>