<!-- Modal -->
<div class="modal-overlay">
  <div class="modal-dependente">
    <a class="close-modal-dependente">
      <i class="material-icons">close</i>
    </a>

    <form id="salva_dependente" action="/cadastros/funcionarios/dependentes" method="post">
      {# FILHOS #}
      <div class="filhos">
        <div class="add-filho"> {# BOTÃO #}
          <div class="rotulo-dependente">Incluir Dependentes</div>
        </div>

        {# REPETIÇÂO FOR AQUI #}
        <!-- Divider -->
        <hr class="sidebar-divider my-0">
        
        <div> {# FUNCIONÁRIOS #}
          <div  class="rotulo">Responsável: <input type="hidden"  name="funcionario_id" value="{{funcionario.id}}"></div>
          
        </div>

        <div class="dados-filhos">
          <div> {# NOME #}
            <div class="rotulo">Nome: </div>
            <input
              class="nome"
              placeholder="Nome do filho(a)"
              type="text"
              name="nome">
          </div>

          <div> {# NASCIMENTO #}
            <div class="rotulo">Data de Nascimento</div>
            <input
              class="data"
              placeholder="DD/MM/AAAA"
              type="text"
              name="nascimento"
              onkeydown="Mask.apply(this, 'data')"
            >
          </div>

          <div> {# CPF #}
            <div class="rotulo">CPF</div>
            <input
              class="cpf-pis-rg"
              placeholder="000.000.000-00"
              type="text"
              name="cpf"
              onkeydown="Mask.apply(this, 'cpf')"
            >
          </div>
        </div>

        <div class="add-dependente"> {# BOTÃO ADD #}
          <div>
            <p class="botoes-edita-registro">Adicionar Dependente</p>
          </div>

          <!-- Divider -->
          <hr class="sidebar-divider my-0">
        </div>

        

        <button form="salva_dependente" type="submit">Salvar</button>
      </div>      
    </form>

  </div>
</div>