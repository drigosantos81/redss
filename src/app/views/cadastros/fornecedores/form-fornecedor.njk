{% extends 'layout.njk' %}

{% block head %}
  <title>Novo Fornecedor</title>
{% endblock %}

{% block content %}
  <div class="container-fluid">

<!-- Page Heading -->
    <div class="novo-botao-func">
      <h1 class="h3 mb-2 text-gray-800">Formulário de Cadastro de Novo Fornecedor</h1>
    </div>

    <p class="mb-4">Preencha todos os campos para incluir o novo Fornecedor.</p>

    <div class="mb-4">
      <div class="cad-cliente">
        <form action="/cadastros/clientes" method="POST">
          <div class="form-cliente">
             <div> {# PJ ou PF #}
              <div class="rotulo">TIPO</div>
              <select class="select-texto" name="pj_pf">
                <option>Pessoa Jurídica</option>
                <option value="Pedreiro">Pessoa Física</option>
              </select>
            </div>

            <div> {# RAZÃO SOCIAL / NOME #}
              <div class="rotulo">
                RAZÃO SOCIAL / NOME: 
              </div>
              <input
                class="campos-padrao-edite"
                placeholder="Nome / Razão Social"
                type="text"
                name="nome_razao"
              >
            </div>

            <div> {# NOME FANTASIA #}
              <div class="rotulo">
                NOME FANTASIA: 
              </div>
              <input
                class="campos-padrao-edite"
                placeholder="Nome Fantasia"
                type="text"
                name="nome_fantasia"
              >
            </div>

            <div> {# CNPJ / CPF #}
              <div class="rotulo">
                CNPJ OU CPF: 
              </div>
              <input
                class="campos-padrao-edite"
                placeholder="00.000.00000/00 | 000.000.000-00"
                type="text"
                name="cnpj_cpf"
                onkeydown="Mask.apply(this, 'cpfCnpj')"
              >
            </div>

            <div> {# IE #}
              <div class="rotulo">
                Inscrição Estadual: 
              </div>
              <input
                class="campos-padrao-edite"
                placeholder="Inscrição Estadual"
                type="text"
                name="ie"
                
              > {# onkeydown="Mask.apply(this, 'cpfCnpj')" #}
            </div>

            <div> {# INSCRIÇÃO MUNICIPAL #}
              <div class="rotulo">
                Inscrição Municipal: 
              </div>
              <input
                class="campos-padrao-edite"
                placeholder="Inscrição Municipal"
                type="text"
                name="i_municipal"
                
              > {# onkeydown="Mask.apply(this, 'formatBRL')" #}
            </div>

            <div> {# E-MAIL #}
              <div class="rotulo">
                E-MAIL: 
              </div>
              <input 
                class="campos-padrao-edite"
                placeholder="xxxxxx@xxx.xxx.xx"
                type="text"
                name="email"
                
              > {# onkeydown="Mask.apply(this, 'data')" #}
            </div>

            <div> {# TELEFONE #}
              <div class="rotulo">
                Telefone: 
              </div>
              <input
                class="telefone"
                type="text"
                name="telefone[]"
                placeholder="(00) 0000-0000"
                onkeydown="Mask.apply(this, 'telefone')"
              >
            </div>

            <div> {# WHATSAPP #}
              <div class="rotulo">
                WhatsApp: 
              </div>
              <input
                class="telefone"
                type="text"
                name="whatsapp"
                placeholder="(00) 9 0000-0000"
                onkeydown="Mask.apply(this, 'celular')"
              >
            </div>
            
            <div> {# CELULAR #}
              <div class="rotulo">
                Celular: 
              </div>
              <input
                class="telefone"
                type="text"
                name="celular[]"
                placeholder="(00) 0 0000-0000"
                onkeydown="Mask.apply(this, 'celular')"
              >
            </div>

            <div> {# CONTATO #}
              <div class="rotulo">
                CONTATO: 
              </div>
              <input 
                class="campos-padrao-edite"
                placeholder="Nome do contato"
                type="text"
                name="contato"
              >
            </div>

            <div> {# CEP #}
              <div class="rotulo">CEP: </div>
              <input
                id="cep"
                class="cep"
                placeholder="00.000-000"
                type="text"
                name="cep"
                onkeydown="Mask.apply(this, 'cep')"
                onblur="pesquisacep(this.value)"
                >
            </div>

            <div> {# ENDEREÇO #}
              <div class="rotulo">Logradouro: </div>
              <input
                id="rua-funcio"
                class="campos-padrao-edite"
                placeholder="Rua, Av."
                type="text"
                name="endereco"
                >
            </div>

            <div> {# NÚMERO #}
              <div class="rotulo">Nº: </div>
              <input
                class="campo-6-digitos"
                placeholder="Nº ou S/N."
                type="text"
                name="numero_end"
                >
            </div>

            <div> {# BAIRRO #}
              <div class="rotulo">Bairro: </div>
              <input
                id="bairro-funcio"
                class="campos-padrao-edite"
                placeholder="Nome do bairro."
                type="text"
                name="bairro"
                >
            </div>

            <div> {# CIDADE #}
              <div class="rotulo">Cidade: </div>
              <input
                id="cidade-funcio"
                class="campos-padrao-edite"
                placeholder="Cidade"
                type="text"
                name="cidade_end"
              >
            </div>

            <div> {# UF #}
              <div class="rotulo">UF: </div>
              <input 
                id="uf-funcio"
                class="campo-6-digitos" 
                placeholder="UF" 
                type="text" 
                name="numero_end"
              >
            </div>

            <input type="hidden" name="" id="ibge">

          </div>

          <button type="submit">Cadastrar</button>
          <a id="cancelar" href="/cadastros/clientes">Cancelar</a>
        </form>
      </div>
    </div>

  </div>
  <!-- /.container-fluid -->
{% endblock %}

{% block scripts %}
  <script src="/js/scriptsApiExterna.js"></script>
{% endblock scripts %}
